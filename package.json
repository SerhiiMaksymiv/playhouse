  "license": "MIT",
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/mocha": "9.1.0",
    "@types/node": "^16.18.126",
    "lighthouse": "^12.6.0",
    "npmignore": "^0.3.1",
    "playwright": "^1.52.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0"
  }
